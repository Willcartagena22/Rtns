SUBROUTINE SLV.UTIL.FORMATO.MONEDA(MONTO)
*-----------------------------------------------------------------------------
*@AUTOR EURIAS
*@UTIL varible de entrada numero y variable de salida numero con formato decimales
*.
*-----------------------------------------------------------------------------
* Modification History :a
*-----------------------------------------------------------------------------
$INSERT I_COMMON
$INSERT I_EQUATE
*-----------------------------------------------------------------------------
aux = MONTO
IF(aux EQ '') THEN
aux='0.00'
END
MONTO = TRIM(FMT(aux, "R2,#20"),"",'D')

END
